{% extends 'SonataAdminBundle::standard_layout.html.twig' %}

{% block stylesheets %}
{{parent()}}
{% if form is defined %}{{ form_stylesheet(form) }}{% endif %}
{% endblock %}

{% block javascripts %}
{{parent()}}
{% if form is defined %}{{ form_javascript(form) }}{% endif %}
{% endblock %}

{% block logo %}
    <a href="{{ url('sonata_admin_dashboard') }}" class="brand">
        <img src="{{ asset(admin_pool.titlelogo) }}"  alt="{{ admin_pool.title }}" />
        {{ admin_pool.title }}
    </a>
    <div style="float: right; text-align: center;">
        <div>
            {{app.user.username}} | {{app.user.unit.name}} | {% if is_granted('ROLE_KEDO') %}{{'ROLE_KEDO'|trans({})}}{% elseif is_granted('ROLE_HELPDESK') %}{{'ROLE_HELPDESK'|trans({})}}{% else %}{{'ROLE_USER'|trans({})}}{% endif %}
        </div>
        <div>
            <a href="{{ url('fos_user_security_logout') }}" style="float: right;">
                {{'Logout'|trans()}}
            </a>
        </div>
    </div>
{% endblock %}

{% block footer %}
<script>
jQuery(document).ready(function(){
    jQuery.datepicker.setDefaults( jQuery.datepicker.regional[ "" ] );
    jQuery(".datepicker").datepicker( jQuery.datepicker.regional[ "en" ]);
});
</script>
{% endblock %}